{
	"name": "EventBasedTrigger",
	"properties": {
		"annotations": [
			"if any file created in storage account then my pipeline automatically should run.",
			"Ignore empty blobs means--> Even my file is empty still I want to run my pipeline"
		],
		"runtimeState": "Started",
		"pipelines": [
			{
				"pipelineReference": {
					"referenceName": "Event_Based_Trigger",
					"type": "PipelineReference"
				},
				"parameters": {
					"pipelinefoldername": "@triggerBody().folderPath",
					"pipeinefilename": "@triggerBody().fileName",
					"pipelineschemaname": "dbo",
					"pipelinetablename": "@triggerBody().tableName"
				}
			}
		],
		"type": "BlobEventsTrigger",
		"typeProperties": {
			"blobPathBeginsWith": "/bronzelayer/blobs/",
			"blobPathEndsWith": ".csv",
			"ignoreEmptyBlobs": true,
			"scope": "/subscriptions/97b7e41b-5696-4069-a341-130144932995/resourceGroups/testrg/providers/Microsoft.Storage/storageAccounts/storageaccdataloadtest",
			"events": [
				"Microsoft.Storage.BlobCreated"
			]
		}
	}
}